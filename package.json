{
  "name": "cardano-dapp-connector",
  "description": "Webcomponent cardano-dapp-connector following open-wc recommendations",
  "license": "MIT",
  "author": "cardano-dapp-connector",
  "version": "0.0.0",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./cardano-dapp-connector.js": "./dist/src/cardano-dapp-connector.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "tsc && npm run analyze -- --exclude dist",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore"
  },
  "dependencies": {
    "@emurgo/cardano-serialization-lib-asmjs": "^10.0.4",
    "@emurgo/cardano-serialization-lib-browser": "^10.0.4",
    "@shoelace-style/shoelace": "^2.0.0-beta.72",
    "alertifyjs": "^1.13.1",
    "bootstrap-4-grid": "^3.4.0",
    "buffer": "^6.0.3",
    "haunted": "^4.8.3",
    "lit": "^2.0.2",
    "nami-wallet-api": "^1.1.9",
    "node-libs-browser": "^2.2.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/building-webpack": "^2.13.46",
    "@open-wc/eslint-config": "^4.3.0",
    "@rollup/plugin-commonjs": "^21.1.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@web/dev-server": "^0.1.28",
    "@web/dev-server-rollup": "^0.3.15",
    "concurrently": "^5.3.0",
    "es-dev-server": "^2.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "module": "^1.2.5",
    "prettier": "^2.4.1",
    "rollup-plugin-html": "^0.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.9.2"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
